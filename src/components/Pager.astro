---
export interface Props {
  firstPage: boolean;
  lastPage: boolean;
  nextUrl: string;
  nextTitle: string;
  prevUrl: string;
  prevTitle: string;
}

const { firstPage, lastPage, nextUrl, nextTitle, prevUrl, prevTitle } =
  Astro.props;
---

<div class="container">
  {!firstPage && <a href={prevUrl}>{prevTitle}</a>}
  {!lastPage && <a href={nextUrl}>{nextTitle}</a>}
</div>

<style lang="scss">
  @use "../styles/variables.scss" as *;

  .container {
    margin: 1.6rem auto;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: clamp(1.6rem, 50%, 6rem);
    contain: paint;

    a {
      color: rgb(205, 205, 205);
      text-align: center;
      margin: 0.8rem 1.6rem 0.8rem 1.6rem;
      font-size: 2.4rem;
      line-height: 2.4rem;
      font-family: "Oswald";
      font-weight: 400;
      text-decoration: none;
      text-transform: uppercase;
      flex: 0 1 max-content;
      transition: all 300ms linear;
      filter: drop-shadow(0 0.2rem 0.2rem rgba(0, 0, 0, 0.4));

      &::first-letter {
        font-size: 120%;
      }

      &:hover {
        text-decoration: underline;
        color: rgb(225, 225, 225);
        scale: 1.2;
      }
    }
  }
</style>
